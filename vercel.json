{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    { "src": "/admin", "dest": "/index.html" },
    { "src": "/check-in", "dest": "/index.html" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/static/(.*)", "headers": { "cache-control": "s-maxage=31536000,immutable" } },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
